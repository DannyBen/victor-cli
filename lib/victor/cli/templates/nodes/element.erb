<%= "# :element" if ENV['DEBUG'] -%>
<%- if children.any? -%>
  <%- if children.count == 1 and children.first.node.text? -%>
    <%- if attributes.any? -%>
<%= name %> "<%= content %>", <%= attributes.render %>
    <%- else -%>
<%= name %> "<%= content %>"
    <%- end -%>
  <%- else -%>
<%= name %> <%= attributes.render %> do
    <%- children.each do |child| -%>
<%= child.render %>
    <%- end -%>
end
  <%- end -%>
<%- else -%>
<%= name %> <%= attributes.render %>
<%- end -%>
